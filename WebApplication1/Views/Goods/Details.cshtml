@model WebApplication1.Models.Good

@{
    ViewData["Title"] = "Details";
}

<h1>Детали товара</h1>

<div>
    <h4>Товар</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            № Товара @* @Html.DisplayNameFor(model => model.PriceId) @Html.DisplayNameFor(model => model.GoodId) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GoodId)
        </dd>
        <dt class="col-sm-2">
            Числловая колонка @* @Html.DisplayNameFor(model => model.MyIntCol) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyIntCol)
        </dd>
        <dt class="col-sm-2">
            Строковая колонка @* @Html.DisplayNameFor(model => model.MyStrCol) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyStrCol)
        </dd>
        <dt class="col-sm-2">
            Текстовая колонка @* @Html.DisplayNameFor(model => model.MyTextCol) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyTextCol)
        </dd>
        <dt class="col-sm-2">
            № Прайса @* @Html.DisplayNameFor(model => model.Price) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price.PriceId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GoodId">Изменить</a> |
    <a asp-action="Index">Назад к списку товаров</a>
</div>
