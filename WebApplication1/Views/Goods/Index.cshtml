@model IEnumerable<WebApplication1.Models.Good>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MyIntCol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyStrCol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyTextCol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
